{% extends 'base.html.twig' %}

{% block body %}

    <div class="col mt-5">
    {% for blogPost in blogPosts %}
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="col p-4 d-flex flex-column position-static">
                    <h3 class="mb-0">{{ blogPost.title }}</h3>
                    <div class="mb-1 text-muted">{{ blogPost.publishedAt ? blogPost.publishedAt|date('Y-m-d') : 'Unpublished' }}</div>
                </div>
            </div>
            <div class="col-sm-3">
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="{{ path('admin_post_remove', {id: blogPost.id}) }}" class="btn btn-danger">Delete</a>
            </div>
        </div>
    {% endfor %}
    </div>



{% endblock %}
